<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:icon="@drawable/ic_notifications"
        android:key="notifications"
        android:summary="On"
        android:title="Notifications" />

    <Preference
        android:icon="@drawable/ic_film"
        android:key="deleteAll"
        android:summary="Delete all movies from phone"
        android:title="Clear Local Cache" />

    <ListPreference
        android:entries="@array/region_names_array"
        android:entryValues="@array/regions_values_array"
        android:icon="@drawable/ic_globe_americas_solid"
        android:key="region"
        android:summary="Select a region"
        android:title="Region" />

    <Preference
        android:icon="@drawable/ic_info"
        android:key="about"
        android:summary="About Screen"
        android:title="About" />
</PreferenceScreen>
